{
  "name": "tappha",
  "version": "1.0.0",
  "description": "TappHA - Home Assistant Integration Platform",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "test": "npm run test --workspace=frontend",
    "lint": "npm run lint --workspace=frontend",
    "clean": "npm run clean --workspace=frontend",
    "install:all": "npm install",
    "frontend:dev": "npm run dev --workspace=frontend",
    "frontend:build": "npm run build --workspace=frontend",
    "agent-os:setup": "cd .agent-os && npm run setup",
    "agent-os:validate": "cd .agent-os && npm run validate",
    "agent-os:status": "cd .agent-os && npm run status"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/tappha.git"
  },
  "keywords": [
    "home-assistant",
    "automation",
    "ai",
    "integration"
  ],
  "author": "TappHA Team",
  "license": "MIT"
}
